<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient android:angle="90" android:centerX="0.9" android:centerY="0.9" android:endColor="@android:color/transparent" android:gradientRadius="90" android:startColor="@color/white" android:type="linear" />
            <!--apply a border around button-->
            <stroke android:width="0dp" android:color="@color/white" />
            <!-- make the button corners rounded-->
        </shape>
    </item>
</selector>